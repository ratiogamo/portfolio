modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
build = ["npm", "run", "build"]
publicDir = "dist"

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Dev Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Dev Server"
author = 34538688
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0"

[[workflows.workflow]]
name = "Vercel"
mode = "sequential"
author = 34538688

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install -g vercel"

[[workflows.workflow]]
name = "Vercel login"
mode = "sequential"
author = 34538688

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vercel login"

[[workflows.workflow]]
name = "Vercel deploy"
mode = "sequential"
author = 34538688

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vercel"

[[workflows.workflow]]
name = "Vercel production"
mode = "sequential"
author = 34538688

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "vercel --prod"

[[workflows.workflow]]
name = "Vercel config remove"
mode = "sequential"
author = 34538688

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git rm vercel.json git commit -m \"Remove vercel.json to use Vercel UI build settings\""

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push origin main # Or your default branch name"
